<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0" prefWidth="500.0" style="-fx-background-color: #f4f4f4;">

    <top>
        <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" text="Tree Visualizer Guide" BorderPane.alignment="CENTER">
            <font>
                <Font size="24.0" />
            </font>
        </Text>
    </top>

    <center>
        <TextArea fx:id="contentTextArea" prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER" style="-fx-background-color: #ffffff; -fx-text-fill: #333333; -fx-font-size: 14px;" editable="false"/>
    </center>

    <bottom>
        <ChoiceBox fx:id="ChoiceBox" prefWidth="150.0" BorderPane.alignment="BOTTOM_CENTER" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-font-size: 14px;"/>
    </bottom>

</BorderPane>
