<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="600.0" style="-fx-background-image: url('file:///D:/Codegroup9/TreeVisualization/src/image/back7.jpg'); -fx-background-repeat: no-repeat; -fx-background-size: stretch;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <BorderPane prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <center>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="30.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnGenericTree" mnemonicParsing="false" onAction="#btnGenericTreePressed" prefHeight="20.0" prefWidth="350.0" style="-fx-background-color: #935626; -fx-text-fill: white; -fx-font-size: 26px;" text="Generic Tree" />
                  <Button fx:id="btnBinaryTree" mnemonicParsing="false" onAction="#btnBinaryTreePressed" prefHeight="50.0" prefWidth="350.0" style="-fx-background-color: #935626; -fx-text-fill: white; -fx-font-size: 26px;" text="Binary Tree" />
                  <Button fx:id="btnBalancedTree" mnemonicParsing="false" onAction="#btnBalancedTreePressed" prefHeight="50.0" prefWidth="350.0" style="-fx-background-color: #935626; -fx-text-fill: white; -fx-font-size: 26px;" text="Balanced Tree" />
                  <Button fx:id="btnBalancedBinaryTree" mnemonicParsing="false" onAction="#btnBalancedBinaryTreePressed" prefHeight="50.0" prefWidth="350.0" style="-fx-background-color: #935626; -fx-text-fill: white; -fx-font-size: 26px;" text="Balanced Binary Tree" />
                  <Button fx:id="btnExit" mnemonicParsing="false" onAction="#btnExitPressed" prefHeight="40.0" prefWidth="260.0" style="-fx-background-color: #FF6F61; -fx-text-fill: white; -fx-font-size: 22px;" text="Exit" />
                  <Button fx:id="HelpButton" mnemonicParsing="false" onAction="#helpPressed" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #688d8f; -fx-text-fill: white; -fx-font-size: 20px;" text="Help" translateY="20.0" />
               </children>
            </VBox>
         </center>
         <top>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefHeight="30.0" prefWidth="800.0" style="-fx-background-color: rgba(46, 71, 14, 0.4);" text="Tree Data Structure Visualizer" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="56.0" />
                     </font>
                     <VBox.margin>
                        <Insets right="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </top>
      </BorderPane>
   </center>
</BorderPane>
